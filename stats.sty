      HP \arabic{hp}
      \boxStat{hp}
      &
      MP \arabic{mp}
      \boxStat{mp}
      &
      SP \arabic{sp}
      \boxStat{sp}
      \\
      }
    \end{tabular}
  \else
    \ifnum\value{enc}<10
      \begin{tabular}{rr}
        \hiderowcolors
        \Repeat{\value{noAppearing}}{
          HP \arabic{hp} \boxStat{hp} &
          MP \arabic{mp} \boxStat{mp} \\
          & SP \arabic{sp} \boxStat{sp} \\
        }
      \end{tabular}
    \else
      \begin{tabular}{r}
        \hiderowcolors
        \Repeat{\value{noAppearing}}{
