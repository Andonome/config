  }%
  \renewcommand\showKnacks{#5}%
  \foreach \s in {Air,Earth,Fate,Fire,Water}%
    {\ifnum\value{\s}>0 \addtocounter{mp}{3}\fi}%
  \renewcommand\equipment{#6}%
  #7%
