\newcommand{\calculateXP}{%
  \iftoggle{allyCharacter}{}{%
    \iftoggle{examplecharacter}{}{%
      %%% Now to get the CR rating.
      %%% We start with the attack value.
      %%% Attack XP = (Damage + AP) x (Attack - AP Cost)
      \setcounter{attackXPtotal}{\value{damage}}%
      \addtocounter{attackXPtotal}{4}%
      \addtocounter{attackXPtotal}{\value{ap}}%
      \setcounter{track}{\value{toHit}}%
      \addtocounter{track}{-\value{heft}}%
      \multiply\value{attackXPtotal} by \value{track}%
      %%% Now the defence rating:
      %%% Defence XP = (DR +1) x (HP + MP)
      \setcounter{track}{\value{dr}}%
      \stepcounter{track}%
      \setcounter{defenceXPtotal}{\value{hp}}%
      \addtocounter{defenceXPtotal}{\value{mp}}%
      \multiply\value{defenceXPtotal} by \value{track}%
      \setcounter{xp}{\value{attackXPtotal}}%
      \addtocounter{xp}{\value{defenceXPtotal}}%
      \addtocounter{xp}{-40}%
      \divide\value{xp} by 10%
      \ifnum\value{xp}<0\setcounter{xp}{0}\fi%
      \glsentrytext{cr}~\arabic{xp}%
    }%
  }%
}

