\newcommand\setCycle[2]{%
  \setcounter{cycle}{#1}% Month
  \ifnum\value{cycle}>6%
    \addtocounter{cycle}{-6}%
  \fi%
  \ifnum\value{cycle}>3%
    \addtocounter{cycle}{-3}%
  \fi%
  \addtocounter{cycle}{-1}%
  \multiply\value{cycle} by 30%
  \addtocounter{cycle}{#2}% Day
  \divide\value{cycle} by 14%
  \addtocounter{cycle}{0}%
}

