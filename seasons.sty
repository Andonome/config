\newcommand\setTemperature{
  \ifcase\value{cycle}%
    \setcounter{temperature}{1}%
  \or%
    \setcounter{temperature}{0}%
  \or%
    \setcounter{temperature}{1}%
  \or%
    \setcounter{temperature}{2}%
  \or%
    \setcounter{temperature}{3}%
  \else
    \setcounter{temperature}{2}%
  \fi%
}

\newcommand\showTemperature{%
  \ifcase\value{temperature}%
    frigid%
  \or%
    mild%
  \or%
    warm%
  \else%
    scorching%
  \fi%
}

